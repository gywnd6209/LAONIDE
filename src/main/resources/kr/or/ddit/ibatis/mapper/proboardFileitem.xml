<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
    
 <sqlMap namespace="proboradFileitem">
 	<typeAlias alias="proboardFileVO" type="kr.or.ddit.vo.ProBoardFileVO"></typeAlias>
 	
 	<statement id="proFileItemList" resultClass="proboardFileVO">
 		SELECT *
 		FROM PRO_BOARD_FILE
 		WHERE FILE_BO_NO = #bo_no#
 	</statement>
 	
	<insert id="insertProFileItem" parameterClass="proboardFileVO">
		<selectKey keyProperty="file_seq">
			SELECT PRO_FILE_SEQ.NEXTVAL FROM DUAL
		</selectKey>
		INSERT INTO PRO_BOARD_FILE (FILE_SEQ
									 ,FILE_BO_NO
								  	 ,FILE_NAME
									 ,FILE_SAVE_NAME
									 ,FILE_CONT_TYPE
									 ,FILE_SIZE)	
					VALUES(#file_seq#
						  ,#file_bo_no#
						  ,#file_name#
						  ,#file_save_name#
						  ,#file_cont_type#
						  ,#file_size#)
	</insert>
	<select id="proFileItemInfo" parameterClass="map" resultClass="proboardFileVO">
		SELECT *
		FROM PRO_BOARD_FILE
 		WHERE FILE_SEQ = #file_seq#
	</select>
	
 </sqlMap>
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 